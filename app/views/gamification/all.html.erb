<!DOCTYPE html>
<html>
	<head>
		<%= stylesheet_link_tag "stylesheet.css" %>
	</head>
	<body>
		<div class="principalSquare">
			<ul class="nav nav-pills red">
			  <li role="presentation"><a href="#">In√≠cio</a></li>
			  <li role="presentation" class="active"><%= link_to "Gamification", :gamifications_all%></li>
	 			<li role="presentation"><%= link_to "UF's", :ufs_all%></li>
			</ul>
			<div class="listSquare">
				<% @gamifications.each do | gami | %>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title"><%= gami.name %></h4>
              <% if gami.actable_type == "Quest" %>
                <span class="label label-default">Quest</span>
              <% else %>
                <span class="label label-default">Achievement</span>
              <% end %>
						</div>
						<div class="panel-body">
							<%= gami.description%> id: <%= gami.id %>
							<% if gami.actable_type == "Quest" %>
								<%= button_to "Delete", quests_delete_path(gami), :method => :delete, :class => "btn btn-default btn-xs" %>
							<% else %>
								<%= button_to "Delete", achievements_path(gami), :method => :delete, :class => "btn btn-default btn-xs" %>
							<% end %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</body>
</html>
