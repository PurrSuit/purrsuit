<!DOCTYPE html>
<%= form_for :quest, url: quests_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
  	<%= f.label :experience_points %><br>
  	<%= f.text_area :experience_points %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>

